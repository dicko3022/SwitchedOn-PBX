############################### START VARIABLES #######################################

# Install RKHUNTER
HELPINGWORDS="";

PKGNAME=LXDE

if [ -f /usr/local/sbin/LXDE ]; then
        rm -rf /usr/local/sbin/LXDE
fi

#deletes ${PKGNAME} from /etc/sop/sop-addons
mkdir -p /etc/sop/
if [ -f /etc/sop/sop-addons ]; then
        sed -i "/${PKGNAME}/d" /etc/sop/sop-addons
fi

PACKAGES="lxde iceweasel browser-plugin-gnash linphone"
aptitude -y install ${PACKAGES}

for i in `cat /etc/passwd|grep bash|egrep -v -i "root|asterisk"|awk -F : '{ print $1 }'`; do
	cd /home/$i
	tar xfvz /usr/scr/programs/mozilla-prefs.tar.gz
	chown -R $i.$i /home/$i
done

#make sure it does not start on boot though
if [ -d /target ]; then
	rm -f /target/etc/rc[2-6].d/S2*gdm
else
	rm -f /etc/rc[2-6].d/S2*gdm
fi

#adds ${PKGNAME} to /etc/sop/sop-addons
echo "${PKGNAME}" >> /etc/sop/sop-addons
exit 0
